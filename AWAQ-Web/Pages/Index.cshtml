@page
@model AWAQ_Web.Pages.IndexModel
@{
    ViewData["Title"] = "Log In";
    Layout = "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ejemplo Bootstrap 4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <div class="cont">
        
        <div class="login">
            <div class="form">
                
                <img class="logo" src="~/img/awaq-logo.png"/>
                <h1>¡Bienvenido!</h1>
                <p>Introduzca sus credenciales para acceder a su cuenta</p>
                <br />
                <form method="post">
                    <div class="mb-3">
                        <label for="correo" class="form-label">Ingresa tu correo electronico</label>
                        <input asp-for="email" type="email" class="form-control" id="correo" placeholder="correo@awaq.com" >
                        <!-- agregar required-->
                    </div>
                    <div class="mb-3">
                        <label for="contraseña" class="form-label">Ingresa tu contraseña</label>
                        <input asp-for="password" type="password" class="form-control" id="email" placeholder="Contraseña" >
                    </div>
                    <button class="btn" type="submit">Iniciar sesión</button>
                </form>
            </div>
        </div>

        <div class="login-img">
        </div>

    </div>
        
    <script src="js/jquery-3.7.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    </body>
</html>

