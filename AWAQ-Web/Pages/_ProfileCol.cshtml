@model MainPageColModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/styles.css">
<link rel="stylesheet" href="~/css/profile_nice.css">

<div class="profile-box">
    <div class="back-prof-picture">
        <div class="back-img">
        </div>
        <div class="photo-info">
            <img class="pfp" src="/img/pfp.png" alt="Default Profile Picture - Avatar Png Green@pngkey.com">
            <div class="info">
                <h3 class="name">@Model.HttpContext.Session.GetString("username")</h3>
                @{
                    if (@Model.HttpContext.Session.GetString("puesto") == "admin")
                    {
                        <h5 class="puesto">Administrador</h5>
                    }
                    else if (@Model.HttpContext.Session.GetString("puesto") == "tedi")
                    {
                        <h5 class="puesto">Tecnologías de la Información</h5>
                    }
                    else if (@Model.HttpContext.Session.GetString("puesto") == "general")
                    {
                        <h5 class="puesto">Colaborador general</h5>
                    }
                }
            </div>

        </div>

    </div>

    <div class="profile-data">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Datos personales</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Experiencia</button>
            </li>
            
            <!--
            <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Seguridad</button>
                        </li>
            -->

        </ul>





        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <p style="font-weight:600;">Datos personales</p>
                            <div class="col-3">
                                <label>Nombre</label>
                                <input type="text" class="form-control" placeholder="@Model.HttpContext.Session.GetString("username").Split(" ")[0]" aria-label="First name" readonly>
                            </div>
                            <div class="col-6">
                                <label>Apellidos</label>
                                <input type="text" class="form-control" placeholder="@Model.HttpContext.Session.GetString("username").Split(" ")[1]" aria-label="Last name" readonly>
                            </div>
                        </div>

                    </div>
                    <div class="col">
                        <p style ="font-weight:600;">Contacto</p>
                        <label>Email</label>
                        <input type="text" class="form-control" placeholder="@Model.HttpContext.Session.GetString("email")" aria-label="First name" readonly>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <label>Género</label>
                        <input type="text" class="form-control" placeholder="@Model.info.genero" aria-label="First name" readonly>
                    </div>
                    <div class="col-md-6">
                        <label>Número de teléfono</label>
                        <input type="text" class="form-control" placeholder="@Model.info.telefono" aria-label="First name" readonly>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <label>Fecha de nacimiento</label>
                        <input type="text" class="form-control" placeholder="@Model.info.nacimiento.ToShortDateString()" aria-label="First name" readonly>
                    </div>
                    <div class="col-md-6">
                        <label>País</label>
                        <input type="text" class="form-control" placeholder="@Model.info.pais" aria-label="First name" readonly>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label>Estado civil</label>
                        <input type="text" class="form-control" placeholder="@Model.info.estado_civil" aria-label="First name" readonly>
                    </div>
                    <div class="col-md-6">
                        <label>Código postal</label>
                        <input type="text" class="form-control" placeholder="@Model.info.cp" aria-label="First name" readonly>
                    </div>
                </div>






            </div>

            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">


                @foreach (var item in Model.exp)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <label>Nombre del puesto</label>
                            <input type="text" class="form-control" placeholder="@item.puesto" aria-label="First name" readonly> 
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Fecha de inicio</label>
                            <input type="text" class="form-control" placeholder="@item.fecha_inicio.ToShortDateString()" aria-label="First name" readonly>
                        </div>
                        <div class="col-md-6">
                            <label>Fecha de fin</label>
                            <input type="text" class="form-control" placeholder="@item.fecha_fin.ToShortDateString()" aria-label="First name" readonly>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label>Empresa</label>
                            <input type="text" class="form-control" placeholder="@item.empresa" aria-label="First name" readonly>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label>Descripcion</label>
                            <textarea type="text" class="form-control" placeholder="@item.descripcion" aria-label="First name" readonly></textarea>
                        </div>

                    </div>




                }


            </div>


        </div>
    </div>


</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
